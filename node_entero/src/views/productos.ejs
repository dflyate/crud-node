<!DOCTYPE html>
<html>

<head>
    <title>Crud NODE Y MYSQL</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>

<body>
    <nav class="navbar navbar-dark bg-dark">
        <a href="/" class="navbar-brand">CRUD de Productos</a>
    </nav>
    
    <div class="container">
        <div class="row mt-5">
            <div class="col-md-7">
                <table class="table table-bordered table-hover">
                    <thead>
                        <th>n*</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Precio</th>
                        <th>Existencias</th>
                        <th>Fecha</th>
                        <th>Acciones</th>
                    </thead>
                    <tbody>
                        <% if(data) {%>
                            <% for(let i = 0; i < data.length; i++){ %>
                                <tr>
                                    <td><%=(i+1)%></td>
                                    <td><%= data[i].nombre%></td>
                                    <td><%= data[i].descripcion%></td>
                                    <td><%= data[i].precio%></td>
                                    <td><%= data[i].existencias%></td>
                                    <td><%= data[i].fecharegistro%></td>
                                    <td>
                                        <a href="/delete/<%=data[i].idproducto%>" class="btn btn-danger">Borrar</a>
                                        <a href="/update/<%=data[i].idproducto%>" class="btn btn-info">Editar</a>
                                    </td>
                                </tr>
                            <% } %>
                        <% } %>
                    </tbody>
                </table>

            </div>
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <form action="/add" method="post">
                            <div class="form-group">
                                <input type="text" name="nombre" placeholder="Nombre" class="form-control">
                            </div>
                            <div class="form-group mt-2">
                                <input type="text" name="descripcion" placeholder="Descripción" class="form-control ">
                            </div>
                            <div class="form-group mt-2">
                                <input type="text" name="precio" placeholder="Precio" class="form-control">
                            </div>
                            <div class="form-group mt-2">
                                <input type="text" name="existencias" placeholder="Existencias" class="form-control">
                            </div>
                            <div class="form-group mt-2">
                                <input type="date" name="fecharegistro" placeholder="Fecha Registro" class="form-control">
                            </div>
                            <button type="submit" class="btn btn-primary mt-3">
                                Guardar Producto
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>